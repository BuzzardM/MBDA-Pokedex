<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FavoritesFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pokemon_favorites_recyclerview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/pokeball_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/favorites_imageView" />

    <ImageView
        android:id="@+id/favorites_imageView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/pokemon_red_background"
        android:contentDescription="@string/favorites_logo_description"
        android:padding="16dp"
        android:src="@drawable/favorites_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>